<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:windowLightNavigationBar">false</item>
<!--        <item name="android:windowLightStatusBar">@bool/light</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:textColorHint">@color/content_color</item>
        <item name="colorAccent">@color/content_color</item>
        <item name="android:textColorHighlight">@android:color/holo_blue_light</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/content_color</item>
    </style>

    <style name="FullScreenTheme.Base" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="FullScreenTheme" parent="FullScreenTheme.Base"/>

    <style name="main_tab_text">
        <item name="android:textSize">@dimen/main_tabs_text</item>
        <item name="android:textColor">@color/disabledTextColor</item>
    </style>

    <style name="bottom_item_text">
        <item name="android:textSize">@dimen/bottom_item_title</item>
        <item name="android:textColor">@color/bottomSheetColor</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/activity_title_text_size</item>
    </style>

    <style name="Theme.App.Dialog.FullScreenWithoutOpacity" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/enter_slide_up
        </item>
        <item name="android:windowExitAnimation">
            @anim/exit_slide_down
        </item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">#000000</item>
    </style>
</resources>
