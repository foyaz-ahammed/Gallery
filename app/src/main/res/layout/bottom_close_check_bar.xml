<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_actions_height"
    android:layout_alignParentBottom="true"
    android:visibility="gone">
    <ImageView
        android:id="@+id/bottom_bar_close"
        android:layout_width="@dimen/bottom_close_check_button_size"
        android:layout_height="@dimen/bottom_close_check_button_size"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/baseline_close_white_24"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:id="@+id/draw_spinner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/bottom_bar_close"
        android:layout_toStartOf="@id/bottom_bar_check"
        android:layout_centerVertical="true"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp">
        <Spinner
            android:id="@+id/bottom_bar_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:popupBackground="#444444"
            android:dropDownWidth="150dp"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/spinner_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text="cover"/>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/spinner_default_holo_light"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bottom_bar_check_close_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/bottom_bar_close"
        android:layout_toStartOf="@id/bottom_bar_check"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Doodle"/>

    <ImageView
        android:id="@+id/bottom_bar_check"
        android:layout_width="@dimen/bottom_close_check_button_size"
        android:layout_height="@dimen/bottom_close_check_button_size"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/baseline_done_white_24"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>
