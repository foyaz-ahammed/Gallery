<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_actions_height"
    android:layout_above="@id/bottom_close_check_bar"
    android:columnCount="6"
    android:rowCount="1"
    android:visibility="gone">
    <ImageView
        android:id="@+id/more_draw_color_red"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_actions_height"
        android:padding="2dp"
        android:src="#ff0000"
        android:background="@drawable/button_wh_border_background"
        android:layout_columnWeight="1"/>

    <ImageView
        android:id="@+id/more_draw_color_green"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_actions_height"
        android:padding="2dp"
        android:layout_columnWeight="1"
        android:src="#00ff00"/>

    <ImageView
        android:id="@+id/more_draw_color_blue"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_actions_height"
        android:padding="2dp"
        android:layout_columnWeight="1"
        android:src="#0000ff"/>

    <ImageView
        android:id="@+id/more_draw_color_black"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_actions_height"
        android:padding="2dp"
        android:layout_columnWeight="1"
        android:src="#000000"/>

    <ImageView
        android:id="@+id/more_draw_color_white"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_actions_height"
        android:padding="2dp"
        android:layout_columnWeight="1"
        android:src="#ffffff"/>

    <FrameLayout
        android:id="@+id/more_draw_color_picker"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_actions_height"
        android:padding="2dp"
        android:layout_columnWeight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_more_vert_white_24"/>
    </FrameLayout>
</GridLayout>
