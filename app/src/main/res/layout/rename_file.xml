<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:background="@drawable/bottom_rounded_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/rename_dialog_title"
        android:textSize="@dimen/bottom_dialog_header_text_size"
        android:textColor="@color/common_text_color"/>

    <EditText
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/round_corner_edit_text"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/delete_button_width"
                android:layout_height="@dimen/delete_button_height"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@string/cancel"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/delete_button_text_size"
                android:textAllCaps="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/ok_btn"
                android:layout_width="@dimen/delete_button_width"
                android:layout_height="@dimen/delete_button_height"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@string/ok"
                android:textColor="@color/common_primary_color"
                android:textSize="@dimen/delete_button_text_size"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
